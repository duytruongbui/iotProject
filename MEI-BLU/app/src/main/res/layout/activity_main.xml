<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#184053"
    android:id="@+id/main"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/x1"
        android:layout_width="200dp"
        android:layout_height="200dp">

        <TextView
            android:id="@+id/txtcenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />


        <RelativeLayout
            android:id="@+id/ra"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@id/txtcenter"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/viens_trang">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/m" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rb"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/txtcenter"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/viens_trang">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/z" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rd"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_marginRight="25dp"
            android:layout_toLeftOf="@id/txtcenter"
            android:background="@drawable/viens_trang">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/y" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rc"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/txtcenter"
            android:background="@drawable/viens_trang">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/k" />
        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/k1"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/x1">

        <SeekBar
            android:id="@+id/stocdo"
            style="@android:style/Widget.Material.Light.SeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp" />

        <SeekBar
            android:id="@+id/sservo"
            style="@android:style/Widget.Material.Light.SeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/stocdo"
            android:layout_marginTop="30dp" />

        <SeekBar
            android:id="@+id/skc"
            style="@android:style/Widget.Material.Light.SeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sservo"
            android:layout_marginTop="30dp" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/x3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/txtcenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />


        <RelativeLayout
            android:id="@+id/ra1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@id/txtcenter"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/viens_trang">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/lb" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rb1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/txtcenter"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/viens_trang">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/lb" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rd1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_marginRight="25dp"
            android:layout_toLeftOf="@id/txtcenter"
            android:background="@drawable/viens_trang">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/lb" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rc1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/txtcenter"
            android:background="@drawable/viens_trang">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/lb" />
        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/k3"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_below="@id/k1"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-1dp"
        android:layout_marginRight="0dp">

        <ImageView
            android:id="@+id/imgchuong"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_below="@id/imgbt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/chuongsa" />

        <ImageView
            android:id="@+id/imgser"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@id/imgchuong"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/rls" />

        <ImageView
            android:id="@+id/imgtocdo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_above="@id/txttd"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/tocdo" />

        <ImageView
            android:id="@+id/imgkc"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_above="@id/txtkc"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/radar" />

        <TextView
            android:id="@+id/txtnd2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/imgbt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="30dp"
            android:rotation="90"
            android:text="30°C"
            android:textColor="#ffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtgoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgser"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:rotation="90"
            android:text="60"
            android:textColor="#ffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cth"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:rotation="90"
            android:text="Auto"
            android:textColor="#ffff"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/txtkc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/imgtocdo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:rotation="90"
            android:text="10"
            android:textColor="#ffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txttd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/imgnd"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:rotation="90"
            android:text="50"
            android:textColor="#ffff"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/imgnd"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_above="@id/txtnd2"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/temp1" />

        <ImageView
            android:id="@+id/imgbt"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/bl" />

        <CheckBox
            android:id="@+id/cth"
            style="@android:style/Widget.Material.Light.CompoundButton.CheckBox"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/txtgoc"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:rotation="90" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/x3"
        android:layout_below="@id/x1"
        android:layout_toLeftOf="@id/k3">

        <RelativeLayout
            android:id="@+id/x4"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/imgcar"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:background="@drawable/xss" />

            <ImageView
                android:id="@+id/img1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:layout_toRightOf="@id/tc2"
                app:srcCompat="@drawable/s" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="40dp"
                android:layout_toLeftOf="@id/tc2"
                app:srcCompat="@drawable/s" />

            <ImageView
                android:id="@+id/img3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/tc2"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/s" />

            <ImageView
                android:id="@+id/img4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_above="@id/tc2"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                app:srcCompat="@drawable/s" />

            <TextView
                android:id="@+id/tc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imggas"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/ngas" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imgdot"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/recs" />

</RelativeLayout>